<body>
    <h1>Lista de Afazeres</h1><br><br>
        <div>
            <div class="mark" id="item1" onclick="marcar(this)"></div> Item 1
        </div>
        <div>
            <div class="mark" id="item2" onclick="document.getElementById('item2').style.background = 'black'"></div> Item 2
        </div>
        <div>
            <div class="mark" id="item3" onclick="document.getElementById('item3').style.background = 'black'"></div> Item 3
        </div>
        <div>
            <div class="mark" id="item4" onclick="document.getElementById('item4').style.background = 'black'"></div> Item 4
        </div>

        <script>
            function marcar(this){
                if (this.style.background = "black") {
                    this.style.background = "white"
                } else {
                    this.style.background = "black"
                }
            }
        </script>
